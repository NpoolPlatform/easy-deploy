[Unit]
Description=Ironfish Client
After=syslog.target network.target

[Service]
Restart=always
RestartSec=10s
ExecStartPre=-/bin/mkdir -p /var/log/ironfish/
ExecStart=sh -c 'node /usr/local/bin/ironfish start --datadir={{ chain_mountpoint }}/ironfish --upgrade >> /var/log/ironfish/ironfish.log'

[Install]
WantedBy=multi-user.target
